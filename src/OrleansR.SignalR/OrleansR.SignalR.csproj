<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <PackageId>OrleansR.SignalR</PackageId>
        <Authors>Liam Morrow</Authors>
        <Title>
            OrleansR SignalR
        </Title>
        <Description>
            The SignalR library for OrleansR. This is the package you'd want on the SignalR server.
            For the Orleans Silo, use OrleansR.OrleansSilo
        </Description>
        <OutputType>Library</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <LangVersion>default</LangVersion>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.Orleans.Client" Version="9.2.1"/>
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\OrleansR.Core\OrleansR.Core.csproj"/>
        <ProjectReference Include="..\OrleansR.Backplane.GrainAdaptors\OrleansR.Backplane.GrainAdaptors.csproj"/>
    </ItemGroup>
</Project>
